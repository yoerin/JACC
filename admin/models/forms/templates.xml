<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
															
		<field
			id="name"
			name="name"
			type="text"
			required="true"
			label="COM_JACC_FIELD_TEMPLATE_LABEL"
			description="COM_JACC_FIELD_EXTENSION_DESC"
			class="inputbox"
			size="40"/>						
		<field
			name="version"
			type="text"
			required="true"		
			label="version"
			description="version_Desc"
			class="inputbox"
			size="10"/>												
						
		<field
			id="description"
			name="description"
			type="textarea"
			label="JGLOBAL_DESCRIPTION"
			description="COM_JACC_DESCRIPTION_DESC"
			rows="3"
			cols="40"
			/>
							
		<field
			id="created"
			name="created"
			type="calendar"
			label="JGLOBAL_CREATED_DATE"
			description="Created_Desc"
			class="inputbox"
			size="16"
			format="%Y-%m-%d %H-%M-%S"
			/>
					
		<field
			name="use"
			type="radio"
			class="inputbox"
			default="1"
			size="1"
			label="Mode"
			description="JField_ModUse_Desc">
			<option
				value="1">
				JOption_Create</option>
			<option
				value="2">
				JOPTION_TMPLLIVING</option>
		</field>
						
		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JField_Published_Label"
			description="JField_Published_Desc">
			<option
				value="1">
				JOption_Published</option>
			<option
				value="0">
				JOption_UnPublished</option>
			<option
				value="-1">
				JOption_Archived</option>
			<option
				value="-2">
				JOption_Trashed</option>
		</field>					
	</fields>	
		
	<fields name="params">
		<fieldset
			name="basic">		
			<field
				name="use_bootstrap"
				type="list"
				default="0"
				label="PARAMS_USEBOOTSTRAP_Label"
				description="PARAMS_USEBOOTSTRAP_DESC">
				<option
					value="0">JNO</option>
				<option
					value="1">JYES</option>
			</field>
		</fieldset>
	</fields>		
</form>	